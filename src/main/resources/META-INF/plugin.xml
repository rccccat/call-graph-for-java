<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.rccccat.ideacallgraph</id>
    <name>idea-call-graph</name>
    <vendor>rccccat</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.kotlin</depends>

    <resource-bundle>messages.MyBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.rccccat.ideacallgraph.toolWindow.MyToolWindowFactory" id="Call Graph"/>
        <applicationConfigurable groupId="tools" displayName="Call Graph" id="callgraph.settings" 
                                instance="com.github.rccccat.ideacallgraph.settings.CallGraphConfigurable"/>
        <applicationConfigurable groupId="tools" displayName="Call Graph LLM" id="callgraph.llm.settings" 
                                instance="com.github.rccccat.ideacallgraph.llm.LLMConfigurable"/>
        <notificationGroup id="Call Graph" displayType="BALLOON" isLogByDefault="false"/>
    </extensions>

    <actions>
        <action id="GenerateCallGraph" 
                class="com.github.rccccat.ideacallgraph.actions.GenerateCallGraphAction" 
                text="Generate Call Graph" 
                description="Generate call graph for the selected method or function">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt G"/>
        </action>
    </actions>
</idea-plugin>
