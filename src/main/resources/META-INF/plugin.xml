<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.rccccat.ideacallgraph</id>
    <name>idea-call-graph</name>
    <vendor>Idea Call Graph</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.rccccat.ideacallgraph.toolWindow.MyToolWindowFactory" id="Call Graph"/>
        <projectConfigurable groupId="tools" displayName="Call Graph" id="callgraph.settings"
                             instance="com.github.rccccat.ideacallgraph.settings.CallGraphConfigurable"/>
        <notificationGroup id="Call Graph" displayType="BALLOON" isLogByDefault="false"/>

        <!-- Application-level services -->
        <applicationService serviceImplementation="com.github.rccccat.ideacallgraph.service.AnalyzerRegistry"/>
        <applicationService serviceImplementation="com.github.rccccat.ideacallgraph.settings.CallGraphAppSettings"/>

        <!-- Project-level services -->
        <projectService serviceImplementation="com.github.rccccat.ideacallgraph.service.CallGraphServiceImpl"/>
        <projectService serviceImplementation="com.github.rccccat.ideacallgraph.settings.CallGraphProjectSettings"/>
    </extensions>

    <actions>
        <action id="GenerateCallGraph"
                class="com.github.rccccat.ideacallgraph.actions.GenerateCallGraphAction"
                text="Generate Call Graph"
                description="Generate call graph for the selected method or function">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt G"/>
        </action>

    </actions>
</idea-plugin>
