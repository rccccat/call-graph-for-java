<idea-plugin>
    <id>com.github.rccccat.callgraphjava</id>
    <name>Call Graph for Java</name>
    <vendor>Call Graph for Java</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="com.github.rccccat.callgraphjava.toolWindow.MyToolWindowFactory" 
                    id="Call Graph"
                    anchor="right"
                    canCloseContents="true"/>
        <projectConfigurable groupId="tools" displayName="Call Graph" id="callgraph.settings"
                             instance="com.github.rccccat.callgraphjava.settings.CallGraphConfigurable"/>
        <notificationGroup id="Call Graph" displayType="BALLOON" isLogByDefault="false"/>
    </extensions>

    <actions>
        <action id="GenerateCallGraph"
                class="com.github.rccccat.callgraphjava.actions.GenerateCallGraphAction"
                text="生成调用图"
                description="为选中的方法生成调用图">
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
            <keyboard-shortcut keymap="$default" first-keystroke="ctrl alt G"/>
        </action>

    </actions>
</idea-plugin>
